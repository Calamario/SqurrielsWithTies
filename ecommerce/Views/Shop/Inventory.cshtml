@model List<ecommerce.Models.Product>
@using Microsoft.AspNetCore.Identity
@using ecommerce.Models
@using System.Security.Claims;


@{
    Layout = "_Layout";
}


@foreach (var item in Model)
{
    <div>
        <h2>@item.Name</h2>
        <img src="@item.Image" />
        <p>$@item.Price</p>
        <p><a asp-controller="Shop" asp-action="Detail" asp-route-id="@item.ID">View Detail</a></p>
    </div>
}
<div>
    @await Component.InvokeAsync("BasketPanel")
</div>