@model List<ecommerce.Models.Product>
@using Microsoft.AspNetCore.Identity
@using ecommerce.Models
@using System.Security.Claims;

@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager
<nav>
    <ul>
        <li>
            <a asp-controller="Shop" asp-action="Inventory">View Products</a>
        </li>
        <li>
            @if (SignInManager.IsSignedIn(User))
            {
                <a asp-controller="Account" asp-action="Logout">Log Out</a>
            }
            else
            {
                <a asp-controller="Account" asp-action="Login">Log In</a>

            }
        </li>

    </ul>
</nav>

@foreach (var item in Model)
{
    <div>
        <h2>@item.Name</h2>
        <img src="@item.Image" />
        <p>$@item.Price</p>
        <p><a asp-controller="Shop" asp-action="Detail" asp-route-id="@item.ID">View Detail</a></p>
    </div>
}