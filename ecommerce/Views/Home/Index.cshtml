@using Microsoft.AspNetCore.Identity
@using ecommerce.Models
@using System.Security.Claims;

@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager

<head>
    <link type="text/css" href="~/styles/index.css" rel="stylesheet" />
    <link type="text/css" href="~/normalize.css" rel="stylsheet"/>

</head>

<h1>Home</h1>
<nav>
    <ul>
        <li>
            <a asp-controller="Shop" asp-action="Inventory">View Products</a>
        </li>
        <li>
            @if (SignInManager.IsSignedIn(User))
            {
                <a asp-controller="Account" asp-action="Logout">Log Out</a>
            }
            else
            {
                <a asp-controller="Account" asp-action="Login">Log In</a>

            }
        </li>

    </ul>
</nav>

@if (SignInManager.IsSignedIn(User))
{
<h2>Hello @User.Claims.First(c  => c.Type == "FullName").Value</h2>
    
}
else
{
    <h3>Hello Anonymous Squirrel</h3>

}